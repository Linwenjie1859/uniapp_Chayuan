<view class="content"><scroll-view class="scroll-h" style="text-align:center;" scroll-x="{{true}}" scroll-into-view="{{scrollInto}}"><block wx:for="{{tabBars}}" wx:for-item="tab" wx:for-index="index" wx:key="index"><view class="uni-tab-item" id="{{tab.id}}" data-current="{{index}}" data-event-opts="{{[['tap',[['ontabtap',['$event']]]]]}}" bindtap="__e"><text class="{{['uni-tab-item-title',tabIndex==index?'uni-tab-item-title-active':'']}}">{{tab.title}}</text></view></block></scroll-view><swiper class="swiper-box" style="overflow:hidden;" current="{{tabIndex}}" duration="{{300}}" data-event-opts="{{[['change',[['ontabchange',['$event']]]]]}}" bindchange="__e"><block wx:for="{{newsList}}" wx:for-item="it" wx:for-index="inde" wx:key="inde"><swiper-item class="swiper-item"><scroll-view class="scroll-v" scroll-y data-event-opts="{{[['scrolltolower',[['loadMore']]]]}}" bindscrolltolower="__e"><view class="loading-more"><block wx:if="{{newsList[inde].refreshFlag}}"><uni-load-more vue-id="{{'1-'+inde}}" status="{{newsList[inde].refreshStatus}}" bind:__l="__l"></uni-load-more></block></view><block wx:for="{{it.data}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view><view class="order_list"><block wx:if="{{item.status==0&&item.paid==1}}"><view class="list_top"><text class="font-32">{{item.store_name}}</text><text class="font-28 orange">等待卖家发货</text></view></block><block wx:if="{{item.status==0&&item.paid==0}}"><view class="list_top"><text class="font-32">{{item.store_name}}</text><text class="font-28 orange">等待买家付款</text></view></block><block wx:if="{{item.status==1&&item.paid==1}}"><view class="list_top"><text class="font-32">{{item.store_name}}</text><text class="font-28 orange">卖家已发货</text></view></block><block wx:if="{{(item.status==2||item.status==3)&&item.paid==1}}"><view class="list_top"><text class="font-32">{{item.store_name}}</text><text class="font-28 orange">交易成功</text></view></block><block wx:for="{{item.cartInfo}}" wx:for-item="ite" wx:for-index="ind" wx:key="ind"><view data-event-opts="{{[['tap',[['details',['$0'],[[['newsList','',inde],['data','',index,'order_id']]]]]]]}}" class="list_info" bindtap="__e"><image src="{{ite.productInfo.image}}" mode></image><view class="info_view"><text class=" font-28 text-cut-two">{{ite.productInfo.store_info}}</text><block wx:if="{{item.open_address}}"><text class="gray  font-24" style="margin:10rpx 0 0 0;">{{"地点:"+item.open_address}}</text></block><block wx:if="{{!item.open_address}}"><text class="gray  font-24  text_right" style="margin:10rpx 0 0 0;">{{"x"+ite.cart_num}}</text></block><text class="gray text_right  font-24" style="margin:10rpx 0 0 0;">{{"￥"+ite.productInfo.price}}</text><block wx:if="{{item.date}}"><text class="font-24 gray" style="margin:0;">{{"出发日期:"+item.date}}</text></block></view></view></block><view style="display:flex;justify-content:flex-end;"><text class="font-28" style="margin:0 20rpx 10rpx;">{{"共"+item.cartInfo.length+"件商品 合计"}}<text class="text-price text-orange">{{item.pay_price}}</text></text></view><block wx:if="{{item.status==0&&item.paid==1}}"><view class="btn"><button class="btn_purchase_green">提醒发货</button></view></block><block wx:if="{{item.status==0&&item.paid==0}}"><view class="btn"><button data-event-opts="{{[['tap',[['closeOrder',['$0',inde,index],[[['newsList','',inde],['data','',index,'order_id']]]]]]]}}" class="btn_purchase_green" bindtap="__e">取消订单</button><button data-event-opts="{{[['tap',[['purchase',[inde,index]]]]]}}" class="btn_purchase_orange" bindtap="__e">立即付款</button></view></block><block wx:if="{{item.status==1&&item.paid==1}}"><view class="btn"><button data-event-opts="{{[['tap',[['logistics',['$0'],[[['newsList','',inde],['data','',index,'order_id']]]]]]]}}" class="btn_purchase_green" bindtap="__e">查看物流</button><button data-event-opts="{{[['tap',[['confirmGood',['$0',inde,index],[[['newsList','',inde],['data','',index,'order_id']]]]]]]}}" class="btn_purchase_orange" bindtap="__e">确认收货</button></view></block><block wx:if="{{item.status==2&&item.paid==1}}"><view class="btn"><button data-event-opts="{{[['tap',[['logistics',['$0'],[[['newsList','',inde],['data','',index,'order_id']]]]]]]}}" class="btn_purchase_green" bindtap="__e">查看物流</button><button data-event-opts="{{[['tap',[['evaluation',[inde,index]]]]]}}" class="btn_purchase_orange" bindtap="__e">评价</button></view></block></view></view></block><block wx:if="{{it.nodata}}"><view class="no_data"><image src="/static/no_data.png" mode></image><text class="font-28 gray">没有相关订单~</text></view></block><view class="loading-more"><block wx:if="{{newsList[inde].loadingFlag}}"><uni-load-more vue-id="{{'2-'+inde}}" status="{{newsList[inde].loadingStatus}}" bind:__l="__l"></uni-load-more></block></view></scroll-view></swiper-item></block></swiper></view>