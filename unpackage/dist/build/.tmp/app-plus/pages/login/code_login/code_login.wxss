/* 头部 */
.header {
	background-color: #51C77D;
	width: 100%;
	height: 170rpx;
	position: fixed;
	top: 0;
	z-index: 10000;
}
.header image {
	width: 35rpx;
	height: 35rpx;
	position: absolute;
	left: 25rpx;
	bottom: 45rpx;
}
.header .pwd_login{
	position: absolute;
	right: 25rpx;
	bottom: 38rpx;
}
.header .input {
	width: 580rpx;
	height: 70rpx;
	border-radius: 10rpx;
	position: absolute;
	left: 50%;
	margin-left: -290rpx;
	bottom: 25rpx;
}
.header .input text {
	display: block;
	width: 580rpx;
	height: 70rpx;
	line-height: 70rpx;
	text-align: center;
}
.down_content{
	margin-top: 100rpx;
}
.logo {
	height: 150rpx;
	width: 150rpx;
	border-radius: 50%;
	margin-top: 150rpx;
}
.input_view {
	width: 550rpx;
	height: 80rpx;
	line-height: 80rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin: 0rpx auto;
	margin-top: 30rpx;
	margin-bottom: 50rpx;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.input_view input {
	/* width: 400upx; */
	text-align: left;
}
.supplement {
	margin-bottom: 90rpx;
}

