.tip {
	margin-top: 50rpx;
}
.mode_tip {
	width: 500rpx;
	height: 30rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	margin: 0 auto;
	position: relative;
	margin-top: 200rpx;
}
.mode_tip text {
	display: block;
	width: 500rpx;
	text-align: center;
}
.mode_tip .line_left {
	width: 150rpx;
	height: 1rpx;
	background-color: #E5E5E5;
	position: absolute;
	top: 14;
	left: 0;
}
.mode_tip .line_right {
	width: 150rpx;
	height: 1rpx;
	background-color: #E5E5E5;
	position: absolute;
	top: 14;
	left: 350rpx;
}
.login_tip {
	width: 500rpx;
	margin: 0 auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	margin-top: 30rpx;
}
.login_tip .mode_view {
	width: 70rpx;
	text-align: center;
}
.login_tip .mode_view image {
	width: 50rpx;
	height: 50rpx;
}
.login_tip .mode_view text {
	display: block;
