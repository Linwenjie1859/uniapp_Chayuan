.hot_list {
	width: 700rpx;
	background-color: #ffffff;
	border-radius: 10rpx;
	position: absolute;
	top: 340rpx;
	left: 50%;
	margin-left: -350rpx;
}
.hot_list .title {
	width: 700rpx;
	display: block;
	text-align: center;
	margin: 25rpx 0rpx 50rpx 0rpx;
}
.hot_list .list_view {
	width: 650rpx;
	margin: 25rpx auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.hot_list .list_view .hot_view image {
	width: 180rpx;
	height: 180rpx;
	border-radius: 10rpx;
}
.hot_list .list_view .hot_view text {
	width: 180rpx;
	display: block;
	text-align: center;
}
.hot_list .list_view .hot_view {
	width: 180rpx;
	position: relative;
}
.hot_list .list_view .hot_tip {
	width: 60rpx !important;
	height: 60rpx !important;
	display: block;
	text-align: center;
	line-height: 60rpx;
	border-radius: 50%;
	background-color: #f66d3c;
	position: absolute;
	top: -30rpx;
	left: -10rpx;
}
.recommend_list {
	width: 700rpx;
	margin: 25rpx auto;
	background-color: #ffffff;
	border-radius: 10rpx;
	margin-top: 390rpx;
}
.recommend_list .title {
	width: 700rpx;
	display: block;
	text-align: center;
	padding-top: 25rpx;
}
.recommend_list .list_view {
	width: 650rpx;
	margin: 0 auto;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	padding: 25rpx 0rpx;
	border-bottom: 1rpx solid #e5e5e5;
}
.recommend_list .list_view image {
	width: 180rpx;
	height: 180rpx;
	margin-right: 25rpx;
}
.recommend_list .list_top text {
	width: 440rpx;
	display: block;
}
.recommend_list .static {
	padding: 0rpx 20rpx;
	background-color: #fce0c8;
	border-radius: 25rpx;
	color: #f66d3c;
}
.recommend_list .list_down {
	width: 440rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
}
.recommend_list .list_down image {
	width: 45rpx !important;
	height: 45rpx !important;
	margin-right: 0rpx;
}
.recommend_list .list_down .old {
	margin-left: 20rpx;
	text-decoration: line-through;
}
