.good_box {
	width: 35rpx;
	height: 35rpx;
	position: fixed;
	border-radius: 50%;
	overflow: hidden;
	left: 50%;
	top: 50%;
	z-index: +99;
	background: #ff4b3e;
}
.cart {
	position: fixed;
	bottom: 100rpx;
	right: 25rpx;
	width: 90rpx;
	height: 90rpx;
	background-color: #f2f2f2;
	border-radius: 50%;
	text-align: center;
	z-index: 9999;
}
.cart image {
	margin: 25rpx auto;
}
.cart .num {
	width: 35rpx;
	height: 35rpx;
	line-height: 35rpx;
	font-size: 28rpx;
	border-radius: 50%;
